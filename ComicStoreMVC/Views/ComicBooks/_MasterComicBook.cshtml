<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>ComicStore</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/wwwroot/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/wwwroot/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>

                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("List", "ComicBooks")" class="nav-link">Store</a>
                </li>
            </ul>

            <!-- SEARCH FORM -->
            @*<form class="form-inline ml-3">
                    <div class="input-group input-group-sm">
                        <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-navbar" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>*@

            @using (Html.BeginForm("ComicBooksList", "ComicBooks", FormMethod.Get))
            {
                @Html.TextBox("Search", null, new { @class = "SearchBox" })
                <input type="submit" value="Search" />
            }


            <!-- Right navbar links -->

            <ul class="navbar-nav ml-auto">
                <!-- Messages Dropdown Menu -->
                <li class="nav-item ">
                    <a class="nav-link" href="@Url.Action("Index", "Cart")">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Login", "Account")" class="nav-link">Login</a>

                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Register", "Account")" class="nav-link">Register</a>
                </li>


            </ul>

        </nav>
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link"></a>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item has-treeview menu-open">

                            <a href="#" class="nav-link active">

                                <p>Publishers</p>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    @Html.Action("MenuByPublisher", "Navigation")
                                </li>
                            </ul>
                        </li>

                    </ul>

                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview menu-open">

                            <a href="#" class="nav-link active">
                                <p>Categories</p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    @Html.Action("MenuByCategorie", "Navigation")
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>

        </aside>

        <!-- /Content Wrapper. Contains page content-->
        <div class="content-wrapper">

            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">

                    </div>
                </div>
            </div>

            <!-- Main content -->

            <div class="col-sm-offset-8">
                @RenderBody()
            </div>

        </div>

        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">

            </div>

        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/wwwroot/js/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/wwwroot/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/wwwroot/js/adminlte.min.js"></script>
</body>
</html>


