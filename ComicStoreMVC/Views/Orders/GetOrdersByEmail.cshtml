@model IEnumerable<ComicStoreMVC.Models.OrderViewModel>

@{
    Layout = "~/Views/Admin/_AdminMaster.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm">
            <div>
                @using (Html.BeginForm("GetOrdersByEmail", "Orders", FormMethod.Get))
                {
                    @Html.TextBox("Search", null, new { @class = "SearchBox" })
                    <input type="submit" value="Search" />
                }
            </div>
        </div>
        <div class="col-sm">

        </div>
        <div class="col-sm">
            <div>

            </div>
        </div>
    </div>
</div>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            Email

        </th>
        <th>
            Price

        </th>
        <th>
            Order Date

        </th>
        <th>
            Order Status

        </th>
        <th>
            Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Order Details
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Details", "GetOrderDetailsByOrderId", "Orders", new { id = item.Id }, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Orders", new { id = item.Id }, null) |

                @Html.ActionLink("Delete", "Delete", "Orders", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>

<div class="panel-footer">
    @Html.ActionLink("Back to Orders", "Orders", "Admin", null,
        new { @class = "btn btn-default" })
</div>
