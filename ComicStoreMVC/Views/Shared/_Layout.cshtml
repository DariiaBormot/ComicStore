<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="x-ua-compatible" content="ie=edge">

        <title>Admin</title>

        <!-- Font Awesome Icons -->
        <link rel="stylesheet" href="~/wwwroot/css/all.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/wwwroot/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    </head>

    <body class="hold-transition sidebar-mini">
        <div class="wrapper">

            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">


                </ul>

                <!-- Right navbar links -->

                <ul class="navbar-nav ml-auto">

                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>

                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="@Url.Action("List", "ComicBooks")" class="nav-link">Store</a>
                    </li>

                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="@Url.Action("Login", "Account")" class="nav-link">Login</a>

                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="@Url.Action("Register", "Account")" class="nav-link">Register</a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">

                </ul>

            </nav>
            <!-- /.navbar -->

        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
  </div>

    <script src="~/wwwroot/js/jquery.min.js"></script>

    <script src="~/wwwroot/js/bootstrap.bundle.min.js"></script>

    <script src="~/wwwroot/js/adminlte.min.js"></script>

    @RenderSection("scripts", required: false)
    </body>
    </html>



