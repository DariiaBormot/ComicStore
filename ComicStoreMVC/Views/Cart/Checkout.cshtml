@model ComicStoreMVC.Models.ShippingDetailsViewModel

@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <h3>Please enter your shipping address and contacts details</h3>
    <div class="form-group">
        <label>Name:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Last Name:</label>
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Country:</label>
        @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>City:</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Street:</label>
        @Html.TextBoxFor(x => x.Street, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Appartment:</label>
        @Html.TextBoxFor(x => x.Appartment, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Zip/Postal Code:</label>
        @Html.TextBoxFor(x => x.ZipCode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Phone number:</label>
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    </div>



    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Continue" />
    </div>
}

