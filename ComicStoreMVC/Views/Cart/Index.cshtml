@model ComicStoreMVC.Models.CartIndexViewModel

@{
    ViewBag.Title = "ComicStore: Shopping Cart";
}

<h2>Your Cart</h2>
<table class="table">
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Comic Book</th>
            <th class="text-right">Price</th>
            <th class="text-right">Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cart.GetAllProducts)
        {
        <tr>
            <td class="text-center">@item.Quantity</td>
            <td class="text-left">@item.ComicBookBL.Name</td>
            <td class="text-right">@item.ComicBookBL.Price.ToString("# USD")</td>
            <td class="text-right">
                @((item.Quantity * item.ComicBookBL.Price).ToString("# USD"))
            </td>
            <td>
                @using (Html.BeginForm("RemoveFromCart", "Cart"))
                {
                    @Html.Hidden("Id", item.ComicBookBL.Id)
                    @Html.HiddenFor(x => x.ReturnUrl)
                    <input class="btn btn-sm btn-warning" type="submit" value="Delete" />
                }
            </td>
        </tr>

        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                @Model.Cart.GetTotalPrice().ToString("# USD")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Back To Store</a>
</div>
